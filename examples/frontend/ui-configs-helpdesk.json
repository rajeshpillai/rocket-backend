[
  {
    "entity": "ticket",
    "config": {
      "list": {
        "title": "Tickets",
        "columns": ["title", "status", "priority", "category", "customer_id", "agent_id", "updated_at"],
        "default_sort": "-updated_at",
        "per_page": 25
      },
      "detail": {
        "title": "Ticket",
        "sections": [
          {
            "title": "Issue",
            "fields": ["title", "description"]
          },
          {
            "title": "Triage",
            "fields": ["status", "priority", "category"]
          },
          {
            "title": "People",
            "fields": ["customer_id", "agent_id"]
          },
          {
            "title": "Resolution",
            "fields": ["resolved_at", "closed_at"]
          }
        ]
      },
      "form": {
        "field_overrides": {
          "title": { "label": "Subject" },
          "description": { "label": "Description", "widget": "textarea", "rows": 8 },
          "status": { "label": "Status", "readonly": true, "help": "Managed by the ticket workflow" },
          "priority": { "label": "Priority" },
          "category": { "label": "Category" },
          "customer_id": { "label": "Customer" },
          "agent_id": { "label": "Assigned Agent" },
          "resolved_at": { "label": "Resolved At", "readonly": true },
          "closed_at": { "label": "Closed At", "readonly": true }
        },
        "hidden_fields": ["deleted_at"],
        "readonly_fields": ["created_at", "updated_at"]
      },
      "sidebar": {
        "label": "Tickets",
        "group": "Support"
      }
    }
  },
  {
    "entity": "response",
    "config": {
      "list": {
        "title": "Responses",
        "columns": ["body", "author_type", "internal_note", "ticket_id", "created_at"],
        "default_sort": "-created_at",
        "per_page": 30
      },
      "detail": {
        "title": "Response",
        "sections": [
          {
            "title": "Message",
            "fields": ["body", "attachment"]
          },
          {
            "title": "Details",
            "fields": ["author_type", "author_id", "internal_note", "ticket_id"]
          }
        ]
      },
      "form": {
        "field_overrides": {
          "body": { "label": "Message", "widget": "textarea", "rows": 8 },
          "author_type": { "label": "Author Type" },
          "author_id": { "label": "Author" },
          "internal_note": { "label": "Internal Note", "help": "Internal notes are only visible to agents" },
          "ticket_id": { "label": "Ticket" },
          "attachment": { "label": "Attachment" }
        },
        "readonly_fields": ["created_at"]
      },
      "sidebar": {
        "label": "Responses",
        "group": "Support"
      }
    }
  },
  {
    "entity": "customer",
    "config": {
      "list": {
        "title": "Customers",
        "columns": ["name", "email", "company", "phone", "created_at"],
        "default_sort": "name",
        "per_page": 25
      },
      "detail": {
        "title": "Customer",
        "sections": [
          {
            "title": "Contact",
            "fields": ["name", "email", "phone"]
          },
          {
            "title": "Organization",
            "fields": ["company"]
          }
        ]
      },
      "form": {
        "field_overrides": {
          "name": { "label": "Full Name" },
          "email": { "label": "Email Address" },
          "phone": { "label": "Phone Number" },
          "company": { "label": "Company" }
        },
        "readonly_fields": ["created_at", "updated_at"]
      },
      "sidebar": {
        "label": "Customers",
        "group": "People"
      }
    }
  },
  {
    "entity": "agent",
    "config": {
      "list": {
        "title": "Support Agents",
        "columns": ["name", "email", "department", "active"],
        "default_sort": "name",
        "per_page": 25
      },
      "detail": {
        "title": "Agent",
        "sections": [
          {
            "title": "Profile",
            "fields": ["name", "email"]
          },
          {
            "title": "Assignment",
            "fields": ["department", "active"]
          }
        ]
      },
      "form": {
        "field_overrides": {
          "name": { "label": "Full Name" },
          "email": { "label": "Work Email" },
          "department": { "label": "Department" },
          "active": { "label": "Active", "help": "Inactive agents won't receive new ticket assignments" }
        },
        "readonly_fields": ["created_at", "updated_at"]
      },
      "sidebar": {
        "label": "Agents",
        "group": "People"
      }
    }
  }
]
